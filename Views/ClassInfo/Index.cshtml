@model List<workshop.Src.Entity.ClassInfo>

<div class="container">
    <a asp-controller="ClassInfo" asp-action="Create" class="btn btn-primary">Add New</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>
</div>